---
import './header.css';
const { origin, name } = Astro.props;
---

<header class="header">
	<div class="header__container">
		<a href="/" class="profile">
			<img
				class="header__img"
				src="../../img/jhon-doe.webp"
				alt="sofiDev img"
				width="40px"
				height="40px"
			/>
			<h3 class="color__gradiente header__title">
				{name}
			</h3><!-- No puede ir un h1 en el header. Se cambiÃ³ por h3 -->
		</a>
		<nav class="links">
			<ul class="header__list">
				{
					origin.map((data) => (
						<li>
							<a href={data.link}>{data.content}</a>
						</li>
					))
				}
			</ul>
		</nav>
	</div>
</header>
