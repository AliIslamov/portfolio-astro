---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  :root {
  }
  html {
    font-family: system-ui, sans-serif;
    font-size: 62.5%;
  }
  body {
    width: 100%;
    background: rgb(13, 0, 69);
    background: linear-gradient(
      225deg,
      rgba(13, 0, 69, 1) 0%,
      rgba(2, 3, 18, 1) 32%,
      rgba(10, 1, 57, 1) 81%,
      rgba(0, 3, 8, 1) 100%
    );
  }
  main {
    align-self: center;
  }

  .color__gradiente{
    background: -webkit-linear-gradient(#08ffe6, #bb01b1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
